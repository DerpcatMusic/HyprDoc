# Application Configuration
NEXT_PUBLIC_APP_NAME=HyprDoc
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# Security Keys (Generate new keys for production!)
NEXTAUTH_SECRET=your-nextauth-secret-key-here
NEXTAUTH_URL=http://localhost:3000

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your-supabase-project-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Google Generative AI
GOOGLE_GENERATIVE_AI_API_KEY=your-google-generative-ai-api-key

# External Services
ROLLBAR_ACCESS_TOKEN=your-rollbar-access-token

# Database Configuration (if using direct DB instead of Supabase)
DATABASE_URL=your-database-connection-string

# Email Configuration (if using email service)
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_USER=your-email@domain.com
SMTP_PASS=your-email-password

# Third-party Integrations
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url
WEBHOOK_SECRET=your-webhook-secret

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=false
NEXT_PUBLIC_ENABLE_DEBUG_MODE=true

# Performance Settings
NEXT_PUBLIC_IMAGE_DOMAINS=your-domain.com
NEXT_PUBLIC_IMAGE_OPTIMIZATION=true

# Security Headers
NEXT_PUBLIC_CSP_REPORT_URI=https://your-csp-report-endpoint

# Development Settings
NEXT_PUBLIC_DEV_MODE=true
NEXT_PUBLIC_LOG_LEVEL=debug

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=GA-XXXXXXXX-X
POSTHOG_KEY=your-posthog-key
POSTHOG_HOST=https://app.posthog.com

# CDN Settings (for production)
NEXT_PUBLIC_CDN_URL=https://cdn.yourdomain.com